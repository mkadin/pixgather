<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.pixgather"
        version   = "2.1.0">


    <name>PixGather</name>

    <description>
        PixGather is a photo sharing application for Drupal websites. 
    </description>

    <author href="http://merlineducation.com" email="mkadin@merlineducation.com">
        Mike Kadin @ Merlin Education
    </author>


    <preference name="orientation" value="portrait" />
    
    <icon src="icon.png" />
    <icon src="images/pixgather-57.png" width="57" height="57" />
    <icon src="images/pixgather-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="images/pixgather-114.png" width="114" height="114" />

ls

    <icon src="images/pixgather-36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="images/pixgather-48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="images/pixgather-72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="images/pixgather-96.png" gap:platform="android" gap:density="xhdpi" />
    
    <preference name="permissions" value="none" />
    <feature name="http://api.phonegap.com/1.0/battery" />
    <feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/network" />


    <access origin="*" />
    
</widget>
